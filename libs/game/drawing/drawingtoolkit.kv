#:kivy 1.8.0
<DrawingToolkit>:
    orientation: 'vertical'
    cols: 1
    size: (260, 330)
    pos: 800+160+50, 100 
    padding: (90, 10)
    spacing: (0, 20)

    canvas:
        # Background color
        Color:
            rgba: 1, 1, 1, .1
        Rectangle:
            size: root.size
            pos: root.pos

        # Background border
        Color:
            rgba: 1, 1, 1, .5
        Line:
            points: [ root.x, root.y, root.x, root.y+root.height, root.x+root.width, root.y+root.height, root.x+root.width, root.y, root.x, root.y ]
            width: 2

    # ToggleButton:
    #     group: 'tools'
    #     name: 'brush'
    #     on_press: root.brush_pressed()
    
    #     canvas:
    #         Rectangle:
    #             texture: root.get_brush_texture()
    #             pos: self.pos
    #             size: self.size
        
    ToggleButton:
        id: line
        group: 'tools'
        name: 'line'
        on_press: root.line_pressed()

        canvas:
            Rectangle:
                texture: root.get_line_texture()
                pos: self.pos
                size: self.size
    # ToggleButton:
    #     id: curve
    #     group: 'tools'
    #     name: 'curve'
    #     on_press: root.line_pressed()

    #     canvas:
    #         Rectangle:
    #             texture: root.get_curve_texture()
    #             pos: self.pos
    #             size: self.size

    ToggleButton:
        id: magnet
        name: 'magnet'
        text: "Magnets"
    
    ToggleButton:
        group: 'tools'
        id: eraser
        name: 'eraser'
        on_press: root.eraser_pressed()

        canvas:
            Rectangle:
                texture: root.get_eraser_texture()
                pos: self.pos
                size: self.size
    Button:
        on_press: root.bomb_pressed()

        canvas:
            Rectangle:
                texture: root.get_bomb_texture()
                pos: self.pos
                size: self.size
    